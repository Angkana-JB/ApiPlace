@page "/"
@inject IJSRuntime JSRuntime;
<style>
    .searchBox{

        background-color: #fff;
        padding: 0 11px 0 13px;
        width: 100%;
        height: 35px;
        font-family:Roboto;
        font-size:15px;
        font-weight:300;
        text-overflow:ellipsis;
    }
    .list-group{
    max-height: 500px;
    margin-bottom: 10px;
    overflow:scroll;
    -webkit-overflow-scrolling: touch;
}

</style>

<PageTitle>Index</PageTitle>
<section class="text-center">


    <h3 class="mb-5">Restaurant map</h3>

  <div class="row">
        <div class="col-lg-3">
            <input id="pac-input" class="searchBox" type="text" placeholder="pls. Text Search Location." />
            <ul id="with-join" class="list-group list-group-flush" >
            </ul>
            </div>
        <div id="map" class="col-lg-9">
            </div>
      </div>
      </section>






@code{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initialize", null);
        }
    }

   
}
